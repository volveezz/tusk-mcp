{
  "name": "tusk-mcp",
  "version": "0.1.0",
  "description": "Read-only PostgreSQL MCP server for AI agents. Schema introspection and SELECT-only query execution.",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/volveezz/tusk-mcp.git"
  },
  "homepage": "https://github.com/volveezz/tusk-mcp",
  "bugs": {
    "url": "https://github.com/volveezz/tusk-mcp/issues"
  },
  "keywords": [
    "mcp",
    "postgresql",
    "postgres",
    "ai",
    "agent",
    "model-context-protocol",
    "database",
    "schema",
    "read-only"
  ],
  "bin": {
    "tusk-mcp": "dist/cli.mjs"
  },
  "files": [
    "dist/cli.mjs"
  ],
  "engines": {
    "node": ">=18.3.0"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build:npm": "bun build src/index.ts --outfile dist/cli.mjs --target=node --packages external",
    "prepublishOnly": "bun run build:npm",
    "build": "bun build --compile --target=bun-windows-x64 src/index.ts --outfile dist/tusk-mcp.exe",
    "build:linux": "bun build --compile --target=bun-linux-x64 src/index.ts --outfile dist/tusk-mcp",
    "build:macos": "bun build --compile --target=bun-darwin-arm64 src/index.ts --outfile dist/tusk-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "postgres": "^3.4.5",
    "ssh2": "^1.16.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/ssh2": "^1.15.4",
    "bun-types": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
